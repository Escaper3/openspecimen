      </mx:HBox> 	 
	 
	  <mx:HBox x="20" y="50">
	      <mx:Button label="OK" click="submitData();"/>
          <mx:Button label="Cancel" click="removeMe();"/>  
	  </mx:HBox>
	  
	  </mx:VBox>

