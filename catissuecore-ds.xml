<?xml version="1.0" encoding="UTF-8"?>

<datasources>

	<local-tx-datasource>
		<jndi-name>catissuecore</jndi-name>
		<connection-url>@@databaseurl@@</connection-url>
		<user-name>@@username@@</user-name>
		<password>@@pasword@@</password>
		<driver-class>@@databasedriver@@</driver-class>
		<check-valid-connection-sql>select count(*) from csm_user</check-valid-connection-sql>
		<min-pool-size>10</min-pool-size>
    	<max-pool-size>25</max-pool-size>
	</local-tx-datasource>
	<local-tx-datasource>
		<jndi-name>dynamicextensions</jndi-name>
		<connection-url>@@databaseurl@@</connection-url>
		<user-name>@@username@@</user-name>
		<password>@@pasword@@</password>
		<driver-class>@@databasedriver@@</driver-class>
		<min-pool-size>10</min-pool-size>
    	<max-pool-size>25</max-pool-size>
	</local-tx-datasource>
</datasources>