<form>
  <view>
    <name>DerivativeEvent</name>
    <caption>Derivative Event</caption>
    <row>
      <userField>
        <name>user</name>
        <udn>user</udn>
        <caption>User</caption>
        <mandatory>true</mandatory>
      </userField>
    </row>
    <row>
      <datePicker>
        <name>time</name>
        <udn>time</udn>
        <caption>Date and Time</caption>
        <format>MM-dd-yyyy HH:mm</format>
        <mandatory>true</mandatory>
      </datePicker>
    </row>
    <row>
      <textField>
        <name>derivativeType</name>
        <udn>derivativeType</udn>
        <caption>Derivative Type</caption>
        <mandatory>true</mandatory>
      </textField>
    </row>
  </view>
</form>