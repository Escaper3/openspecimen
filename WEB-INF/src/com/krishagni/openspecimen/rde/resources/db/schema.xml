<?xml version="1.0" encoding="UTF-8"?> 

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <property name="clob.long.type" value="longtext" dbms="mysql"/>
  <property name="clob.long.type" value="clob" dbms="oracle"/>

  <changeSet author="vgaikwad" id="RDE sessions">
    <createTable tableName="OS_RDE_SESSIONS">
      <column name="IDENTIFIER" type="${int.type}" autoIncrement="${autoIncrement}">
        <constraints primaryKey="true" nullable="false"/>
      </column>

      <column name="SUID" type="${text.type}(48)"/>

      <column name="USER_ID" type="${int.type}">
        <constraints nullable="false" />
      </column>
     
      <column name="DATA" type="${clob.long.type}"/>
     
      <column name="CREATED_ON" type="${timestamp.type}">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet> 
  
  <changeSet author="vgaikwad" id="RDE sessions sequence" dbms="oracle">
    <createSequence 
      sequenceName="OS_RDE_SESSIONS_SEQ"
      startValue="1" 
      incrementBy="1" 
      ordered="true" />
  </changeSet>

  <changeSet author="vgaikwad" id="FK on RDE session user">
    <addForeignKeyConstraint 
      constraintName="FK_OS_RDE_SESSIONS_USER_ID"
      baseTableName="OS_RDE_SESSIONS"
      baseColumnNames="USER_ID"
      referencedTableName="CATISSUE_USER"
      referencedColumnNames="IDENTIFIER"/>
  </changeSet>  
  
  <changeSet author="vgaikwad" id="Index on RDE session user">
    <createIndex indexName="OS_RDE_SESSIONS_USER_IDX" tableName="OS_RDE_SESSIONS">
      <column name="USER_ID"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
