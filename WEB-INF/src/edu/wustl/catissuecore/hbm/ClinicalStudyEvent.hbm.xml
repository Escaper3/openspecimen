<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.ClinicalStudyEvent"
        table="CATISSUE_CLINICAL_STUDY_EVENT"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_STUDY_EVENT_SEQ</param>
            </generator>
        </id>

        <many-to-one
            name="clinicalStudy"
            class="edu.wustl.catissuecore.domain.ClinicalStudy"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="CLINICAL_STUDY_ID"
        />

        <property
            name="collectionPointLabel"
            type="string"
            update="true"
            insert="true"
            column="COLLECTION_POINT_LABEL"
            length="255"
        />

        <property
            name="studyCalendarEventPoint"
            type="double"
            update="true"
            insert="true"
            column="EVENT_POINT"
            length="10"
        />

        <set
            name="eventEntryCollection"
            table="CATISSUE_CLIN_STUDY_EVNT_NTRY"
            lazy="true"
            inverse="true"
            cascade="save-update"
            sort="unsorted"
        >

              <key
                  column="CLINICAL_STUDY_EVENT_ID"
              />

              <one-to-many
                  class="edu.wustl.catissuecore.domain.ClinicalStudyEventEntry"
              />
        </set>

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ClinicalStudyEvent.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
