<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd">

<hibernate-mapping>
    <class
        name="edu.wustl.catissuecore.domain.ClinicalStudyRegistration"
        table="CATISSUE_CLINICAL_STUDY_REG"
        dynamic-update="false"
        dynamic-insert="false"
    >

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null"
        >
            <generator class="native">
                <param name="sequence">CATISSUE_CLINICAL_STUDY_SEQ</param>
            </generator>
        </id>

        <property
            name="clinicalStudyParticipantIdentifier"
            type="string"
            update="true"
            insert="true"
            column="CLINICAL_STUDY_PARTICIPANT_ID"
            length="255"
        />

        <property
            name="registrationDate"
            type="date"
            update="true"
            insert="true"
            column="REGISTRATION_DATE"
        />

        <many-to-one
            name="participant"
            class="edu.wustl.catissuecore.domain.Participant"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="PARTICIPANT_ID"
        />

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="50"
        />

        <many-to-one
            name="clinicalStudy"
            class="edu.wustl.catissuecore.domain.ClinicalStudy"
            cascade="none"
            outer-join="auto"
            update="true"
            insert="true"
            column="CLINICAL_STUDY_ID"
        />

        <!--
            To add non XDoclet property mappings, create a file named
                hibernate-properties-ClinicalStudyRegistration.xml
            containing the additional properties and place it in your merge dir.
        -->

    </class>

</hibernate-mapping>
