    <addColumn tableName="catissue_site_cp_aud">
      <column name="collectionProtocol_mod" type="BIT"/>
    </addColumn>
  </changeSet>

  <changeSet author="vlonushte" id="Adding code column to site cp table">
    <addColumn tableName="catissue_site_cp_aud">
      <column name="CODE" type="VARCHAR(16)"/>
    </addColumn>
  </changeSet>

  <changeSet author="vlonushte" id="Cp Site code modified">
    <addColumn tableName="catissue_site_cp_aud">
      <column name="code_mod" type="BIT"/>
    </addColumn>
  </changeSet>
</databaseChangeLog>
