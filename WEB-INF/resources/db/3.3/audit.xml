  <changeSet author="vpawar" id="Entity audit revision details">
    <createTable tableName="OS_ENTITY_REVISION_DETAILS">
      <column name="IDENTIFIER" type="${int.type}" autoIncrement="${autoIncrement}">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="REV" type="${int.type}">
        <constraints nullable="false"/>
      </column>
      <column name="REV_TYPE" type="${tinyint.type}">
        <constraints nullable="false"/>
      </column>
      <column name="ENTITY_NAME" type="${text.type}(255)">
        <constraints nullable="false"/>
      </column>
      <column name="ENTITY_ID" type="${int.type}">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet author="vpawar" id="Entity audit revision details sequence" dbms="oracle">
    <createSequence
      sequenceName="OS_ENTITY_REV_DETAIL_SEQ"
      startValue="1"
      incrementBy="1"
      ordered="true"/>
  </changeSet>

  <changeSet author="vpawar" id="Procedure to populate entity audit revision details" runOnChange="true" dbms="mysql">
    <sql endDelimiter="//">
      drop procedure if exists load_entity_audit_rev_details;
    </sql>

    <sql endDelimiter="//">
      create procedure load_entity_audit_rev_details(
        in entityName text,
        in entityTable text
      )
      begin
        select concat(
          'insert into os_entity_revision_details(rev, rev_type, entity_name, entity_id) ',
          '  select ',
          '    o.rev as rev, o.revtype as rev_type, re.entityname as entity_name, ',
          '    o.identifier as entity_id',
          '  from ',
          '    os_revisions r ',
          '    inner join os_revision_entities re on re.rev = r.rev and re.entityname = \'', entityName, '\'',
          '    inner join ', entityTable, ' o on o.rev = re.rev '
        ) into @dml;

        prepare stmt from @dml;

        execute stmt;

        deallocate prepare stmt;
      end;
      //
    </sql>
  </changeSet>

  <changeSet author="vpawar" id="Procedure to populate entity audit revision details" runOnChange="true" dbms="oracle">
    <sql endDelimiter="//">
      create or replace procedure load_entity_audit_rev_details(
        entityName in varchar2,
        entityTable in varchar2
      ) is
      begin
        execute immediate
          'insert into os_entity_revision_details(identifier, rev, rev_type, entity_name, entity_id)
             select
               os_entity_rev_detail_seq.nextval as identifier, o.rev as rev, o.revtype as rev_type,
               re.entityname as entity_name, o.identifier as entity_id
             from
               os_revisions r
               inner join os_revision_entities re on re.rev = r.rev and re.entityname = ''' || entityName || '''' ||
               ' inner join ' || entityTable || ' o on o.rev = re.rev ';
      end;
      //
    </sql>
  </changeSet>

