<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog 
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
  xsi:schemaLocation="
    http://www.liquibase.org/xml/ns/dbchangelog 
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext 
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

  <changeSet author="vpawar" id="Add a column to group pooled specimen requirements">
    <addColumn tableName="catissue_cp_req_specimen_aud">
      <column name="pooled_spmn_head_id" type="${int.type}"/>
    </addColumn>
  </changeSet>

  <changeSet author="vpawar" id="Track changes in pooled specimen requirements">
    <addColumn tableName="catissue_cp_req_specimen_aud">
      <column name="pooledSpecimensHead_MOD" type="${boolean.type}"/>
    </addColumn>
  </changeSet>

  <changeSet author="vpawar" id="Add a column to group pooled specimens">
    <addColumn tableName="catissue_specimen">
      <column name="pooled_spmn_head_id" type="${int.type}"/>
    </addColumn>
  </changeSet>

  <changeSet author="vpawar" id="Track changes in pooled specimens">
    <addColumn tableName="catissue_specimen">
      <column name="pooledSpecimensHead_MOD" type="${boolean.type}"/>
    </addColumn>
  </changeSet>
</databaseChangeLog>
