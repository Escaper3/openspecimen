<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
  http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet author="mdnasim" id="Print rule description field">
    <addColumn tableName="OS_PRINT_RULES">
      <column name="DESCRIPTION" type="${text.type}(255)">
        <constraints nullable="false"/>
      </column>
    </addColumn>
  </changeSet>

  <changeSet author="mdnasim" id="Update print rule description to default string">
    <sql>
      update
        os_print_rules
      set
        description = concat('Print rule ', identifier);
    </sql>
  </changeSet>
</databaseChangeLog>
