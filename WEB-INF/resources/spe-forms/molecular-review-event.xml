#macro(getMessage $code)$messageSource.getMessage($code, null, $locale)#end

<form>
  <view>
    <name>SpecimenMolecularReviewEvent</name>
    <caption>#getMessage("molecular_review_event")</caption>
    <table>CATISSUE_MOL_SPE_REVIEW_PARAM</table>
    <primaryKey>IDENTIFIER</primaryKey>

    <row>
      <textField>
        <name>gelImageUrl</name>
        <udn>gelImageUrl</udn>
        <caption>#getMessage("gel_image_url")</caption>
        <column>GEL_IMAGE_URL</column>
      </textField>
    </row>

    <row>
      <textField>
        <name>qualityIdx</name>
        <udn>qualityIdx</udn>
        <caption>#getMessage("quality_index")</caption>
        <column>QUALITY_INDEX</column>
      </textField>
    </row>

    <row>
      <numberField>
        <name>gelNumber</name>
        <udn>gelNumber</udn>
        <caption>#getMessage("gel_number")</caption>
        <column>GEL_NUMBER</column>
      </numberField>
    </row>

    <row>
      <textField>
        <name>laneNumber</name>
        <udn>laneNumber</udn>
        <caption>#getMessage("lane_number")</caption>
        <column>LANE_NUMBER</column>
      </textField>
    </row>

    <row>
      <numberField>
        <name>absorbanceAt260</name>
        <udn>absorbanceAt260</udn>
        <caption>#getMessage("absorbance_at_260")</caption>
        <column>ABSORBANCE_AT_260</column>
      </numberField>
    </row>

    <row>
      <numberField>
        <name>absorbanceAt280</name>
        <udn>absorbanceAt280</udn>
        <caption>#getMessage("absorbance_at_280")</caption>
        <column>ABSORBANCE_AT_280</column>
      </numberField>
    </row>

    <row>
      <numberField>
        <name>ratio28sTo18s</name>
        <udn>ratio28sTo18s</udn>
        <caption>#getMessage("ratio_28s_to_18s")</caption>
        <column>RATIO_28S_TO_18S</column>
      </numberField>
    </row>

    <row>
      <userField>
        <name>user</name>
        <udn>user</udn>
        <caption>#getMessage("user")</caption>
        <column>USER_ID</column>
        <showInGrid>true</showInGrid>
        <mandatory>true</mandatory>
      </userField>
    </row>

    <row>
      <datePicker>
        <name>time</name>
        <udn>time</udn>
        <caption>#getMessage("date_time")</caption>
        <column>EVENT_TIMESTAMP</column>
        <format>MM-dd-yyyy HH:mm</format>
        <showInGrid>true</showInGrid>
        <default>current_date</default>
        <mandatory>true</mandatory>
      </datePicker>
    </row>

    <row>
      <textArea>
        <name>comments</name>
        <udn>comments</udn>
        <caption>#getMessage("comments")</caption>
        <column>COMMENTS</column>
        <height>2</height>
      </textArea>
    </row>
  </view>
</form>

