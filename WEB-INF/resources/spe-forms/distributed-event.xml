#macro(getMessage $code)$messageSource.getMessage($code, null, $locale)#end

<form>
  <view>
    <name>SpecimenDistributedEvent</name>
    <caption>#getMessage("distributed_event")</caption>
    <table>CATISSUE_DISTRI_EVENT_PARAM</table>
    <primaryKey>IDENTIFIER</primaryKey>

    <row>
      <numberField>
        <name>quantity</name>
        <udn>quantity</udn>
        <caption>#getMessage("distributed_evnt_quantity")</caption>
        <column>DISTRIBUTED_QUANTITY</column>
        <mandatory>true</mandatory>
        <noOfDigitsAfterDecimal>4</noOfDigitsAfterDecimal>
      </numberField>
    </row>

    <row>
      <userField>
        <name>user</name>
        <udn>user</udn>
        <caption>#getMessage("specimen_evnt_user")</caption>
        <column>USER_ID</column>
        <showInGrid>true</showInGrid>
      </userField>
    </row>

    <row>
      <datePicker>
        <name>time</name>
        <udn>time</udn>
        <caption>#getMessage("specimen_evnt_date_time")</caption>
        <column>EVENT_TIMESTAMP</column>
        <format>MM-dd-yyyy HH:mm</format>
        <showInGrid>true</showInGrid>
        <default>current_date</default>
        <mandatory>true</mandatory>
      </datePicker>
    </row>

    <row>
      <textArea>
        <name>comments</name>
        <udn>comments</udn>
        <caption>#getMessage("specimen_evnt_comments")</caption>
        <column>COMMENTS</column>
        <height>2</height>
      </textArea>
    </row>
  </view>
</form>
