#macro(getMessage $code)$messageSource.getMessage($code, null, $locale)#end

<form>
  <view>
    <name>SpecimenCellReviewEvent</name>
    <caption>#getMessage("cell_review_event")</caption>
    <table>CATISSUE_CELL_SPE_REVIEW_PARAM</table>
    <primaryKey>IDENTIFIER</primaryKey>

    <row>
      <numberField>
        <name>neoPlasticCellularityPct</name>
        <udn>neoPlasticCellularityPct</udn>
        <caption>#getMessage("neo_plastic_cellularity_percentage")</caption>
        <column>NEOPLASTIC_CELLULARITY_PER</column>
      </numberField>
    </row>

    <row>
      <numberField>
        <name>viableCellPct</name>
        <udn>viableCellPct</udn>
        <caption>#getMessage("viable_cell_percentage")</caption>
	<column>VIABLE_CELL_PERCENTAGE</column>
      </numberField>
    </row>

    <row>
      <userField>
        <name>user</name>
        <udn>user</udn>
        <caption>#getMessage("user")</caption>
        <column>USER_ID</column>
        <showInGrid>true</showInGrid>
        <mandatory>true</mandatory>
      </userField>
    </row>

    <row>
      <datePicker>
        <name>time</name>
        <udn>time</udn>
        <caption>#getMessage("date_time")</caption>
        <column>EVENT_TIMESTAMP</column>
        <format>MM-dd-yyyy HH:mm</format>
        <showInGrid>true</showInGrid>
        <default>current_date</default>
        <mandatory>true</mandatory>
      </datePicker>
    </row>


    <row>
      <textArea>
        <name>comments</name>
        <udn>comments</udn>
        <caption>#getMessage("comments")</caption>
        <column>COMMENTS</column>
        <height>2</height>
      </textArea>
    </row>
  </view>
</form>
