<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
    <class
        name="com.krishagni.catissueplus.core.administrative.domain.User"
        table="CATISSUE_USER"
        lazy="true">

    	<cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null">
            <generator class="native">
                <param name="sequence">CATISSUE_USER_SEQ</param>
            </generator>
        </id>

        <property
            name="emailAddress"
            type="string"
            update="true"
            insert="true"
            column="EMAIL_ADDRESS"
            length="255"/>

        <property
            name="firstName"
            type="string"
            update="true"
            insert="true"
            column="FIRST_NAME"
            length="255"/>

        <property
            name="lastName"
            type="string"
            update="true"
            insert="true"
            column="LAST_NAME"
            length="255"/>

        <property
            name="loginName"
            type="string"
            update="true"
            insert="true"
            column="LOGIN_NAME"
            length="255"
            not-null="true"
            unique="true"/>

        <property
            name="createDate"
            type="date"
            update="true"
            insert="true"
            column="START_DATE"/>

        <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="50"/>

        <many-to-one
            name="department"
            class="com.krishagni.catissueplus.core.administrative.domain.Department"
            cascade="none"
            update="true"
            insert="true"
            column="DEPARTMENT_ID"  lazy="false"/>

        <many-to-one
           name="address"
           class="com.krishagni.catissueplus.core.administrative.domain.Address"
           cascade="save-update"
           column="ADDRESS_ID"/>

        <property
            name="ldapId"
            type="long"
            update="true"
            insert="true"
            column="CSM_USER_ID"
            length="20"/>

        <property
            name="comments"
            type="string"
            update="true"	
            insert="true"
            column="STATUS_COMMENT"
            length="2000"/>
            
        <query name="getUserByLoginName">
		SELECT user.loginName FROM com.krishagni.catissueplus.core.administrative.domain.User user WHERE user.loginName = :loginName
	</query>

	<query name="getUserByEmailAddress">
		SELECT user.emailAddress FROM com.krishagni.catissueplus.core.administrative.domain.User user WHERE user.emailAddress = :emailAddress
	</query>

    </class>
</hibernate-mapping>
