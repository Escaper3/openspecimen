<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class name="com.krishagni.catissueplus.core.audit.domain.EntityRevision" table="OS_REVISIONS">
    <id name="id" column="REV">
      <generator class="native">
        <param name="sequence">OS_REVISIONS_SEQ</param>
      </generator>
    </id>

    <property name="revtstmp" column="REVTSTMP" />

    <property name="userId" column="USER_ID" />
    
    <property name="ipAddress" column="IP_ADDRESS" />
    
    <set name="details" table="OS_ENTITY_REVISION_DETAILS" inverse="true" cascade="all-delete-orphan">
      <key column="REV"/>
      <one-to-many class="com.krishagni.catissueplus.core.audit.domain.EntityRevisionDetail"/>
    </set>
  </class>
</hibernate-mapping>