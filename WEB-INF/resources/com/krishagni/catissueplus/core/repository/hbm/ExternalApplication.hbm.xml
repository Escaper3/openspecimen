<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping auto-import="false">
    <class
        name="com.krishagni.catissueplus.core.extapp.domain.ExternalApplication"
        table="CATISSUE_EXTERNAL_APPLICATION"
	lazy="false" >
    
	<cache usage="read-write" />
        <id
            name="id"
            column="IDENTIFIER"	
            type="long"
            length="30"
            unsaved-value="null">

            <generator class="native">
            </generator>
        </id>
        
        <property 
		name="applicationName" 
		type="string" 
		column="APP_NAME" 
		 />

        <property
            name="serviceClass"
            type="string"
            column="SERVICE_CLASS"
            length="100"/>
            
        <query name="getAllExternalApps">
			from com.krishagni.catissueplus.core.extapp.domain.ExternalApplication extapp 
		</query>

        
    </class>
</hibernate-mapping>
