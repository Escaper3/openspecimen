<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class
    name="com.krishagni.catissueplus.core.biospecimen.domain.CollectionProtocol"
    table="CATISSUE_COLLECTION_PROTOCOL"
    lazy="true">
    <cache usage="read-write" />

    <id name="id" column="IDENTIFIER">
      <generator class="native">
        <param name="sequence">CATISSUE_SPECIMEN_PROTOCOL_SEQ</param>
      </generator>
    </id>

    <property 
      name="title" 
      column="TITLE" 
      unique="true"/>

    <property 
      name="shortTitle" 
      column="SHORT_TITLE"/>

    <property 
      name="startDate" 
      column="START_DATE"/>

    <property 
      name="endDate" 
      column="END_DATE"/>

    <property 
      name="activityStatus" 
      column="ACTIVITY_STATUS"/>

    <many-to-one 
      name="principalInvestigator" 
      cascade="none" 
      class="com.krishagni.catissueplus.core.administrative.domain.User"
      column="PRINCIPAL_INVESTIGATOR_ID"/>

    <property
      name="irbIdentifier"
      type="string"
      update="true"
      insert="true"
      column="IRB_IDENTIFIER"
      length="255"/>

    <property
      name="enrollment"
      type="long"
      update="true"
      insert="true"
      column="ENROLLMENT"
      length="50"/>

    <property
      name="descriptionURL"
      type="string"
      update="true"
      insert="true"
      column="DESCRIPTION_URL"
      length="255"/>

    <property
      name="specimenLabelFormat"
      type="string"
      update="true"
      insert="true"
      column="LABEL_FORMAT"
      length="255"/>

    <property
      name="derivativeLabelFormat"
      type="string"
      update="true"
      insert="true"
      column="DERIV_LABEL_FORMAT"
      length="255"/>

    <property
      name="aliquotLabelFormat"
      type="string"
      update="true"
      insert="true"
      column="ALIQUOT_LABEL_FORMAT"
      length="255"/>

    <property
      name="ppidFormat"
      type="string"
      update="true"
      insert="true"
      column="PPID_FORMAT"
      length="255"/>
          
    <property
      name="unsignedConsentDocumentURL"
      type="string"
      update="true"
      insert="true"
      column="UNSIGNED_CONSENT_DOC_URL"
      length="1000"/>

    <set
      name="clinicalDiagnosis"
      table="CATISSUE_CLINICAL_DIAGNOSIS"
      fetch="join" lazy="false"
      inverse="false"
      cascade="save-update,all-delete-orphan"
      sort="unsorted">
      <key
          column="COLLECTION_PROTOCOL_ID"/>

      <one-to-many
        class="com.krishagni.catissueplus.core.biospecimen.domain.ClinicalDiagnosis"/>
    </set>

    <set
      name="consentTier"
      table="CATISSUE_CONSENT_TIER"
      fetch="join" lazy="false"
      inverse="false"
      cascade="all-delete-orphan">
      <key column="COLL_PROTOCOL_ID"/>
      <one-to-many class="com.krishagni.catissueplus.core.biospecimen.domain.ConsentTier"/>
    </set>

    <set
      name="coordinators"
      table="CATISSUE_COLL_COORDINATORS"
      fetch="join" lazy="false"
      inverse="false"
      cascade="none"
      sort="unsorted">

      <key column="COLLECTION_PROTOCOL_ID"/>

      <many-to-many
          class="com.krishagni.catissueplus.core.administrative.domain.User"
          column="USER_ID"/>

    </set>

    <set
      name="assignedProtocolUsers"
      table="CATISSUE_USER_CP"
      fetch="join" lazy="false"
      inverse="false"
      cascade="none">

      <key column="COLLECTION_PROTOCOL_ID"/>

      <many-to-many
          class="com.krishagni.catissueplus.core.administrative.domain.User"
          column="USER_ID"/>
    </set>

    <set
      name="sites"
      table="CATISSUE_SITE_CP"
      lazy="false" fetch="join"
      inverse="false"
      cascade="none"
      sort="unsorted">

      <key column="COLLECTION_PROTOCOL_ID"/>
      <many-to-many
          class="com.krishagni.catissueplus.core.administrative.domain.Site"
          column="SITE_ID"/>

    </set>
    
    <set
      name="distributionProtocols"
      table="CATISSUE_COLL_DISTRIBUTION_REL"
      lazy="true"
      inverse="false"
      cascade="save-update"
      sort="unsorted">

      <key column="COLLECTION_PROTOCOL_ID"/>

      <many-to-many
        class="com.krishagni.catissueplus.core.administrative.domain.DistributionProtocol"
        column="DISTRIBUTION_PROTOCOL_ID"/>
    </set>

    <set
      name="childCollectionProtocols"
      table="CATISSUE_COLLECTION_PROTOCOL"
      fetch="join" lazy="false"
      inverse="true"
      cascade="save-update"
      sort="unsorted">

      <key column="PARENT_CP_ID"/>

      <one-to-many
        class="com.krishagni.catissueplus.core.biospecimen.domain.CollectionProtocol"/>
    </set>

    <many-to-one
      name="parentCollectionProtocol"
      class="com.krishagni.catissueplus.core.biospecimen.domain.CollectionProtocol"
      cascade="none"
      update="true"
      insert="true"
      column="PARENT_CP_ID"/>

    <property
      name="type"
      type="string"
      update="true"
      insert="true"
      column="CP_TYPE"
      length="50"/>

    <property
      name="sequenceNumber"
      type="long"
      update="true"
      insert="true"
      column="SEQUENCE_NUMBER"
      length="30"/>

    <property
      name="studyCalendarEventPoint"
      type="double"
      update="true"
      insert="true"
      column="STUDY_CALENDAR_EVENT_POINT"
      length="50"/>

    <property
      name="aliquotInSameContainer"
      type="boolean"
      update="true"
      insert="true"
      column="ALIQUOT_IN_SAME_CONTAINER"/>

    <property
      name="consentsWaived"
      type="boolean"
      update="true"
      insert="true"
      column="CONSENTS_WAIVED" />

    <set
      name="collectionProtocolEvents"
      table="CATISSUE_COLL_PROT_EVENT"
      inverse="true"
      cascade="save-update">

      <key column="COLLECTION_PROTOCOL_ID"/>
      <one-to-many
        class="com.krishagni.catissueplus.core.biospecimen.domain.CollectionProtocolEvent"/>
    </set>

    <set name="cpSiteRoles" table="CATISSUE_CP_GROUP_ROLES" cascade="all-delete-orphan" inverse="true">
      <key column="CP_ID"/>
      <one-to-many class="com.krishagni.catissueplus.core.privileges.domain.CPSiteRole"/>
    </set>
         
    <sql-query name="getParticipantAndSpecimenCount">
      <return-scalar column="cpId" type="long"/>
      <return-scalar column="participantCnt" type="long"/>
      <return-scalar column="specimenCnt" type="long"/>

      select 
        cp.identifier as cpId, count(distinct cpr.identifier) as participantCnt, count(distinct sp.identifier) as specimenCnt 
      from 
        catissue_collection_protocol cp 
        left join catissue_coll_prot_reg cpr on cpr.collection_protocol_id = cp.identifier and cpr.activity_status = 'Active'
        left join catissue_specimen_coll_group scg on scg.collection_protocol_reg_id = cpr.identifier 
        left join catissue_specimen sp on sp.specimen_collection_group_id = scg.identifier and sp.collection_status = 'Collected'
      where
        cp.activity_status = 'Active'
      group by 
        cp.identifier
    </sql-query>
  </class>
</hibernate-mapping>
