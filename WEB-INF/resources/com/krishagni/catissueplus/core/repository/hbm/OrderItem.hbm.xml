<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class
    name="com.krishagni.catissueplus.core.administrative.domain.OrderItem"
    table="OS_ORDER_ITEMS">
	
    <id
      name="id"
      column="IDENTIFIER"
      type="long"
      length="30"
      unsaved-value="null">
      <generator class="native">
        <param name="sequence">OS_ORDER_ITEMS_SEQ</param>
      </generator>
    </id>
    
    <many-to-one 
      name="order" 
      cascade="none" 
      class="com.krishagni.catissueplus.core.administrative.domain.Order"
      column="ORDER_ID"/>

    <property
      name="quantity"
      type="double"
      column="QUANTITY"/>
      
    <many-to-one 
      name="specimen" 
      cascade="none" 
      class="com.krishagni.catissueplus.core.biospecimen.domain.Specimen"
      column="SPECIMEN_ID"/>
      
  </class>
</hibernate-mapping>