<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
    <class
        name="com.krishagni.catissueplus.core.privileges.domain.UserSiteRole"
        table="CATISSUE_USER_SITE_ROLES"
        lazy="true">
	
    	<cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null">
            <generator class="native">
                <param name="sequence">CATISSUE_USER_SITE_ROLE_SEQ</param>
            </generator>
        </id>

		<many-to-one name="user" class="com.krishagni.catissueplus.core.administrative.domain.User" fetch="select">
            <column name="USER_ID" not-null="true" />
        </many-to-one>

        <many-to-one
            name="role"
            class="com.krishagni.catissueplus.core.privileges.domain.Role"
            cascade="save-update"
            update="true"
            insert="true"
            column="ROLE_ID"/>

        <many-to-one
            name="site"
            class="com.krishagni.catissueplus.core.biospecimen.domain.Site"
            cascade="save-update"
            update="true"
            insert="true"
            column="USER_GROUP_ID" />
            
        <query name="getPrivilegeByUser">
        	SELECT cp.id 
        	FROM com.krishagni.catissueplus.core.privileges.domain.CPSiteRole cpSiteRole 
        	JOIN cpSiteRole.collectionProtocol as cp JOIN cpSiteRole.site as site 
        	WHERE  site IN ( SELECT site 
        					 FROM com.krishagni.catissueplus.core.privileges.domain.UserSiteRole userSiteRole 
							 JOIN userSiteRole.role as role JOIN userSiteRole.user as user 
							 JOIN userSiteRole.site as site JOIN role.privileges as privileges 
							 WHERE user.id = :userId AND privileges.name = :privilegeConst )
		</query>
      
   </class>
</hibernate-mapping>
