<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class
    name="com.krishagni.catissueplus.core.biospecimen.domain.AbstractPosition"
    table="CATISSUE_ABSTRACT_POSITION"
    lazy="true">
    
    <id
      name="id"
      column="IDENTIFIER"
      type="long"
      length="30"
      unsaved-value="null">
      <generator class="native">
        <param name="sequence">CATISSUE_ABS_POSITION_SEQ</param>
      </generator>
    </id>

    <property
      name="positionDimensionOne"
      type="long"
      column="POSITION_DIMENSION_ONE"
      length="30"/>
    
    <property
      name="positionDimensionTwo"
      type="long"
      column="POSITION_DIMENSION_TWO"
      length="30"/>

    <property
      name="positionDimensionOneString"
      type="string"
      column="POSITION_DIMENSION_ONE_STRING"
      length="50"/>
    
    <property
      name="positionDimensionTwoString"
      type="string"
      column="POSITION_DIMENSION_TWO_STRING"
      length="50"/>
    
    <joined-subclass
      name="com.krishagni.catissueplus.core.biospecimen.domain.SpecimenPosition"
      table="CATISSUE_SPECIMEN_POSITION"
      lazy="true">
        
      <key column="IDENTIFIER"/>    
    
      <many-to-one
        name="specimen"
        class="com.krishagni.catissueplus.core.biospecimen.domain.Specimen"
        cascade="none"
        column="SPECIMEN_ID"/>
    
      <many-to-one
        name="storageContainer"
        class="com.krishagni.catissueplus.core.administrative.domain.StorageContainer"
        cascade="none"
        column="CONTAINER_ID"/>
    </joined-subclass>    
  </class>
</hibernate-mapping>
