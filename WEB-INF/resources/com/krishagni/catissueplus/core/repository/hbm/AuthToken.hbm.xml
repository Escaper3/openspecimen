<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class
    name="com.krishagni.catissueplus.core.auth.domain.AuthToken"
    table="OS_AUTH_TOKENS">

    <id name="token" column="TOKEN"/>

    <many-to-one name="user" column="USER_ID"/>

    <property name="ipAddress" not-null="true" column="IP_ADDRESS"/>
    
    <many-to-one name="loginAuditLog" not-null="true" column="LOGIN_AUDIT_LOG_ID" unique-key="true"/>
    
    <query name="getByKey">
        from com.krishagni.catissueplus.core.auth.domain.AuthToken t where t.token = :token
    </query>
    
    <query name="deleteExpiredAuthTokens">
      <![CDATA[
        delete
        from 
          com.krishagni.catissueplus.core.auth.domain.AuthToken t
        where 
          t.token in (
            select 
              al1.authToken
            from
              com.krishagni.catissueplus.core.audit.domain.UserApiCallLog al1
            where 
              al1.authToken = t.token and 
              ( 
                select 
                  max (al2.callStartTime)
                from 
                  com.krishagni.catissueplus.core.audit.domain.UserApiCallLog al2 
                where
                  al2.authToken = t.token ) < :accessedUpto        
	      )
	  ]]>
    </query>
         
  </class>
</hibernate-mapping>
