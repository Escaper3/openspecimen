<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class name="com.krishagni.catissueplus.core.administrative.domain.ShippingOrder" 
    table="OS_SHIPPING_ORDERS">
    
    <id name="id" column="IDENTIFIER">
      <generator class="native">
        <param name="sequence">OS_SHIPPING_ORDERS_SEQ</param>
      </generator>
    </id>
    
    <property name="name" column="NAME"/>
    
    <many-to-one name="site" column="SITE_ID"/>
      
    <many-to-one name="sender" column="SENDER_ID"/>
    
    <property name="status" column="STATUS" not-null="true">
      <type name="org.hibernate.type.EnumType">
        <param name="enumClass">com.krishagni.catissueplus.core.administrative.domain.ShippingOrder$Status</param>
        <param name="type">12</param>
      </type>
    </property>
    
    <property name="comments" column="COMMENTS"/>
    
    <property name="shippingDate" column="SHIPPING_DATE"/>
    
    <property name="activityStatus" column="ACTIVITY_STATUS"/>
    
    <set name="orderItems" cascade="all-delete-orphan" inverse="true">
      <key column="ORDER_ID" />
      <one-to-many class="com.krishagni.catissueplus.core.administrative.domain.ShippingOrderItem"/>
    </set>
    
    <many-to-one name="receiver" column="RECEIVER_ID"/>
    
    <property name="receiverComments" column="RECEIVER_COMMENTS"/>
    
    <filter name="activeEntity"/>
    
    <query name="getOrderByName">
      from
        com.krishagni.catissueplus.core.administrative.domain.ShippingOrder
      where
        name = :name
    </query>
    
    <query name="getShippedSpecimensByLabels">
      select
        spec
      from
        com.krishagni.catissueplus.core.administrative.domain.ShippingOrder so
        join so.orderItems oi
        join oi.specimen spec
      where
        so.status = 'SHIPPED' and
        spec.label in (:labels)
    </query>
  </class>
</hibernate-mapping>
