<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class
    name="com.krishagni.catissueplus.core.administrative.domain.ForgotPasswordToken"
    table="OS_FORGOT_PASSWORD_TOKENS">
  
    <id name="id" column="IDENTIFIER">
      <generator class="native"/>
    </id>
    
    <many-to-one name="user" column="USER_ID"/>
    
    <property name="token" column="TOKEN"/>
    
    <property name="createdDate" column="CREATED_DATE"/>
    
    <query name="findByToken">
      from ForgotPasswordToken fp where fp.token = :token
    </query>
    
    <query name="findByUser">
      from ForgotPasswordToken fp where fp.user.id = :userId
    </query>
  </class>
</hibernate-mapping>