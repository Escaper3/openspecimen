<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class
    name="com.krishagni.catissueplus.core.administrative.domain.ForgotPasswordToken"
    table="OS_FORGOT_PASSWORD_TOKENS">
  
    <id name="id" column="USER_ID">
      <generator class="foreign">
        <param name="property">user</param>
      </generator>
    </id>
	
    <one-to-one name="user" constrained="true"/>
    
    <property name="token" column="TOKEN"/>
    
    <property name="createdDate" column="CREATED_DATE"/>
    
    <query name="getFpToken">
      from ForgotPasswordToken where token = :token
    </query>
    
    <query name="getFpTokenByUser">
      from ForgotPasswordToken where user.id = :userId
    </query>
  </class>
</hibernate-mapping>