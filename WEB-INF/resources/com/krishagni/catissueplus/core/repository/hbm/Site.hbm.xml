<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
    <class
        name="com.krishagni.catissueplus.core.biospecimen.domain.Site"
        table="CATISSUE_SITE" lazy="true">
    
    	<cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null">
            <generator class="native">
                <param name="sequence">CATISSUE_GROUP_SEQ</param>
            </generator>
        </id>

        <property
            name="name"
            type="string"
            column="NAME"
            length="255"
            not-null="true"
            unique="true"/>


    <query name="getSiteByName">
    	SELECT site FROM com.krishagni.catissueplus.core.biospecimen.domain.Site site WHERE site.name = :siteName
    </query>
 
 </class>

</hibernate-mapping>
