<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
    <class
        name="com.krishagni.catissueplus.core.administrative.domain.Site"
        table="CATISSUE_SITE" lazy="true">
    
    	<cache usage="read-write" />

        <id
            name="id"
            column="IDENTIFIER"
            type="long"
            length="30"
            unsaved-value="null">
            <generator class="native">
                <param name="sequence">CATISSUE_GROUP_SEQ</param>
            </generator>
        </id>

        <property
            name="name"
            type="string"
            column="NAME"
            length="255"
            not-null="true"
            unique="true"/>
            
        <property
            name="type"
            type="string"
            update="true"
            insert="true"
            column="TYPE"
            length="50"
        />
        
         <property
            name="activityStatus"
            type="string"
            update="true"
            insert="true"
            column="ACTIVITY_STATUS"
            length="50"
        />
        
         <property
            name="emailAddress"
            type="string"
            update="true"
            insert="true"
            column="EMAIL_ADDRESS"
            length="255"
         />
            
        <set name="coordinatorCollection"  table="CATISSUE_SITE_COORDINATORS">
         <key column="SITE_ID"/>
         <many-to-many 
         	column="USER_ID" 
         	class="com.krishagni.catissueplus.core.administrative.domain.User"/>
       </set>
        
        <many-to-one name="address" 
            class="com.krishagni.catissueplus.core.administrative.domain.Address" 
            column="ADDRESS_ID" 
            cascade="all" 
            not-null="true" />
           
    <query name="getSiteByName">
    	SELECT site FROM com.krishagni.catissueplus.core.administrative.domain.Site site WHERE site.name = :siteName
    </query>
    
 </class>

</hibernate-mapping>
 	