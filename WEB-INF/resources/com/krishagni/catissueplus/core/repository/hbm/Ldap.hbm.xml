<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class
    name="com.krishagni.catissueplus.core.auth.domain.Ldap"
    table="CATISSUE_LDAP_DETAILS">
    
    <id name="domainId" column="DOMAIN_ID">
      <generator class="foreign">
        <param name="property">authDomain</param>
      </generator>
    </id>
	
    <one-to-one name="authDomain" constrained="true"/>

    <property name="host" column="HOST"/>
            
    <property name="port" column="PORT"/>
        
    <property name="bindUser" column="BIND_USER"/>
        
    <property name="bindPassword" column="BIND_PASSWORD"/>
            
    <property name="idField" column="ID_FIELD"/>

    <property name="directoryContext" column="DIRECTORY_CONTEXT"/>

    <property name="surnameField" column="SURNAME_FIELD"/>
		
    <property name="givenNameField" column="GIVEN_NAME_FIELD"/>
            
    <property name="searchBaseDir" column="SEARCH_BASE_DIR"/>
            
    <property name="filterString" column="FILTER_STRING"/>
            
    <property name="emailField" column="EMAIL_FIELD"/>
            
  </class>
</hibernate-mapping>
