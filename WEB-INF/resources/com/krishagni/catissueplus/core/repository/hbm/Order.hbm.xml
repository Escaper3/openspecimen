<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false">
  <class
    name="com.krishagni.catissueplus.core.administrative.domain.Order"
    table="CATISSUE_ORDER">
	
    <id
      name="id"
      column="IDENTIFIER"
      type="long"
      length="30"
      unsaved-value="null">
      <generator class="native">
        <param name="sequence">CATISSUE_ORDER_SEQ</param>
      </generator>
    </id>
    
    <property
      name="name"
      type="string"
      column="NAME"
      length="255"
      not-null="true"
      unique="true"/>

    <many-to-one 
      name="requester" 
      cascade="none" 
      class="com.krishagni.catissueplus.core.administrative.domain.User"
      column="REQUESTER_ID"/>
      
    <property
      name="requestedDate"
      type="java.util.Date"
      column="REQUESTED_DATE"/>
      
    <property
      name="activityStatus"
      type="string"
      column="STATUS"
      length="255"/> 

    <set
      name="orderItems"
      table="OS_ORDER_ITEMS"
      cascade="save-update"
      inverse="true"
      sort="unsorted">

      <key column="ORDER_ID"/>

      <one-to-many class="com.krishagni.catissueplus.core.administrative.domain.OrderItem"/>
    </set>     
    
    <joined-subclass
      name="com.krishagni.catissueplus.core.administrative.domain.DistributionOrder"
      table="OS_DISTRIBUTION_ORDER">
      
      <key column="IDENTIFIER"/>
      
      <property
        name="distributionAction"
        column="DISTRIBUTION_ACTION"/>
        
      <many-to-one 
        name="distributionProtocol" 
        cascade="none" 
        class="com.krishagni.catissueplus.core.administrative.domain.DistributionProtocol"
        column="DISTRIBUTION_PROTOCOL_ID"/>
        
      <many-to-one 
        name="distributor" 
        cascade="none" 
        class="com.krishagni.catissueplus.core.administrative.domain.User"
        column="DISTRIBUTOR_ID"/>
        
      <query name="getDistributionOrderByName">
        from 
          com.krishagni.catissueplus.core.administrative.domain.DistributionOrder
        where 
          name = :name
      </query>
    </joined-subclass>
  </class>
</hibernate-mapping>