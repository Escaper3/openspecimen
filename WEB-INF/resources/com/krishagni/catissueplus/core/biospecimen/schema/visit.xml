#macro( getMessage $code )
  $messageSource.getMessage($code, null, $locale)
#end

<object-schema>
  <name>visit</name>

  <record> 
    <name>com.krishagni.catissueplus.core.biospecimen.events.VisitDetail</name>
   
    <field>
      <caption>#getMessage("scg_cp_short_title")</caption>
      <attribute>cpShortTitle</attribute>
    </field>     

    <field>
      <caption>#getMessage("scg_ppid")</caption>
      <attribute>ppid</attribute>
    </field>     

    <field>
      <caption>#getMessage("scg_event_label")</caption>
      <attribute>eventLabel</attribute>
    </field>     

    <field>
      <caption>#getMessage("scg_name")</caption>
      <attribute>name</attribute>
    </field>     

    <field>
      <type>date</type>
      <caption>#getMessage("scg_date")</caption>
      <attribute>visitDate</attribute>
    </field>  

    <field>
      <caption>#getMessage("scg_site")</caption>
      <attribute>site</attribute>
    </field>  

    <field>
      <caption>#getMessage("scg_status")</caption>
      <attribute>status</attribute>
    </field>  

    <field>
      <caption>#getMessage("scg_clinical_diagnosis")</caption>
      <attribute>clinicalDiagnosis</attribute>
    </field>  

    <field>
      <caption>#getMessage("scg_clinical_status")</caption>
      <attribute>clinicalStatus</attribute>
    </field>  

    <field>
      <caption>#getMessage("scg_surgical_pathology_number")</caption>
      <attribute>surgicalPathologyNumber</attribute>
    </field>  

    <field>
      <caption>#getMessage("scg_comments")</caption>
      <attribute>comments</attribute>
    </field>  

    <field>
      <caption>#getMessage("scg_activity_status")</caption>
      <attribute>activityStatus</attribute>
    </field>  
  </record>
</object-schema>
