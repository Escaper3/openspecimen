<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config
PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
"http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<form-beans>
		<form-bean name="annotationDataEntryForm" type="edu.wustl.catissuecore.actionForm.AnnotationDataEntryForm" />
	</form-beans>

	<action-mappings>

		<action path="/LoadAnnotationDataEntryPage"
			type="krishagni.catissueplus.action.annotations.LoadAnnotationDataEntryPageAction"
			name="annotationDataEntryForm" validate="false" scope="request">
			<forward name="success"
				path="/ngweb/pages/FormDataEntryPage.jsp" />
		</action>

 		<action path="/loadcsd" type="edu.wustl.catissuecore.action.ForwardAdminAction">
 			<forward name="success" path=".catissuecore.csd" />
                </action>
 
 		<action path="/ecrf" type="edu.wustl.catissuecore.action.ForwardAdminAction">
  			<forward name="success" path=".catissuecore.ecrf"/>
  		</action>

  		<action path="/query" type="edu.wustl.catissuecore.action.ForwardAction">
  		    <forward name="success" path=".catissuecore.query" />	
  		</action>
  		
		<action path="/v20" type="org.apache.struts.actions.ForwardAction" parameter="/v20.jsp"/>
	</action-mappings>

	<controller processorClass="edu.wustl.common.struts.ApplicationRequestProcessor" />

	<message-resources parameter="ApplicationResources" />

	<plug-in className="org.apache.struts.tiles.TilesPlugin">
		<set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
		<set-property property="moduleAware" value="true" />
		<set-property property="definitions-parser-validate" value="true" />
	</plug-in>
</struts-config>
