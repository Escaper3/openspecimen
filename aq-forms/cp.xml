<form>
	<view>
		<name>CollectionProtocol</name>
		<caption>Collection Protocol</caption>
		<table>CATISSUE_COLLECTION_PROTOCOL</table>
		<activeCondition>ACTIVITY_STATUS = 'Active'</activeCondition>
		<row>
			<numberField>
				<name>id</name>
				<udn>id</udn>
				<caption>Identifier</caption>
				<column>IDENTIFIER</column>
			</numberField>
		</row>
		
		<row>
			<dropDown>
				<name>shortTitle</name>
				<udn>shortTitle</udn>
				<caption>Short Title</caption>
				<column>SHORT_TITLE</column>
				<options>
					<sql>select distinct SHORT_TITLE from CATISSUE_COLLECTION_PROTOCOL</sql>
				</options>
			</dropDown>
		</row>

		<row>
			<textField>
				<name>title</name>
				<udn>Title</udn>
				<caption>Title</caption>
				<column>TITLE</column>
			</textField>
		</row>
		
		<row>
			<textField>
				<name>irbIdentifier</name>
				<udn>irbIdentifier</udn>
				<caption>IRB Identifier</caption>
				<column>IRB_IDENTIFIER</column>
			</textField>
		</row>
		
		<row>
			<datePicker>
				<name>startDate</name>
				<udn>startDate</udn>
				<caption>Start Date</caption>
				<column>START_DATE</column>
			</datePicker>
		</row>
		
		<row>
			<datePicker>
				<name>endDate</name>
				<udn>endDate</udn>
				<caption>End Date</caption>
				<column>END_DATE</column>
			</datePicker>
		</row>
		
		<row>
                        <booleanCheckBox>
                                <name>consentWaived</name>
                                <udn>consentWaived</udn>
                                <caption>Consent Waived</caption>
                                <column>CONSENTS_WAIVED</column>
                        </booleanCheckBox>
                </row>
				
		<row>
			<dropDown>
				<name>activityStatus</name>
				<udn>activityStatus</udn>
				<caption>Activity Status</caption>
				<column>ACTIVITY_STATUS</column>
				<options>
					<option><value>Active</value></option>
					<option><value>Disabled</value></option>
					<option><value>Closed</value></option>
				</options>
			</dropDown>
		</row>
		
		<row>
			<subForm>
				<name>principalInvestigator</name>
				<udn>principalInvestigator</udn>
				<caption>PI</caption>
				<table>USER_VIEW</table>
				<foreignKey>IDENTIFIER</foreignKey>
				<parentKey>PRINCIPAL_INVESTIGATOR_ID</parentKey>

				<row>					
					<textField>
						<name>email</name>
						<udn>email</udn>
						<caption>PI Email Address</caption>
						<column>EMAIL_ADDRESS</column>
					</textField>

					
					<textField>
						<name>firstName</name>
						<udn>firstName</udn>
						<caption>PI First Name</caption>
						<column>FIRST_NAME</column>
					</textField>
					
					<textField>
						<name>lastName</name>
						<udn>lastName</udn>
						<caption>PI Last Name</caption>
						<column>LAST_NAME</column>
					</textField>
										
					<dropDown>
						<name>department</name>
						<udn>department</udn>
						<caption>PI Department</caption>
						<column>DEPARTMENT_NAME</column>
						<options>
							<sql>select distinct DEPARTMENT_NAME from USER_VIEW</sql>
						</options>
					</dropDown>
				</row>
			</subForm>
		</row>

		<row>
			<subForm>
				<name>coordinator</name>
				<udn>coordinator</udn>
				<caption>Coordinator</caption>
				<table>CATISSUE_COLL_COORDINATORS</table>
				<foreignKey>COLLECTION_PROTOCOL_ID</foreignKey>
				<parentKey>IDENTIFIER</parentKey>
				<row>
					<subForm>
						<name>user</name>
						<udn>user</udn>
						<caption>User</caption>
						<table>USER_VIEW</table>
						<foreignKey>IDENTIFIER</foreignKey>
						<parentKey>USER_ID</parentKey>
						<row>
							<textField>
								<name>email</name>
								<udn>email</udn>
								<caption>Coordinator Email Address</caption>
								<column>EMAIL_ADDRESS</column>
							</textField>

							<textField>
								<name>firstName</name>
								<udn>firstName</udn>
								<caption>Coordinator First Name</caption>
								<column>FIRST_NAME</column>
							</textField>
							
							<textField>
								<name>lastName</name>
								<udn>lastName</udn>
								<caption>Coordinator Last Name</caption>
								<column>LAST_NAME</column>
							</textField>
												
							<dropDown>
								<name>department</name>
								<udn>department</udn>
								<caption>Coordinator Department</caption>
								<column>DEPARTMENT_NAME</column>
								<options>
									<sql>select distinct DEPARTMENT_NAME from USER_VIEW</sql>
								</options>
							</dropDown>
						</row>
					</subForm>
				</row>
			</subForm>
		</row>
	</view>
</form>
